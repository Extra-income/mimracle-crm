#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('linshimuye:server');
var http = require('http');

var log4js = require('log4js');
var global = require('../my_modules/global');
log4js.configure({
    "appenders":
        [
            {
                "type":"console",
                "category":"console"
            },
            {
                type: "file",
                filename: "/data/logs/nodejs/lxmy-b2c-linshi-info.log",
                pattern: "yyyyMMddhh",
                alwaysIncludePattern: true,
                category:'normal',
                "maxLogSize": 104800,
                "backups": 100
            },
            {
                type: "file",
                filename: "/data/logs/nodejs/lxmy-b2c-linshi-error.log",
                pattern: "yyyyMMddhh",
                alwaysIncludePattern: true,
                category:'error',
                "maxLogSize": 104800,
                "backups": 100
            }
        ],
    "replaceConsole": true,
    "levels":
    {
        "file":"ALL"
    }
});

global.config({
    id:"develop_linux",
    pc_domain:"http://linshi.mmshop-dev.my0404.com"
});
global.initAfterConfig && global.initAfterConfig();
/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
